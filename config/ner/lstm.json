{
    "dataset_reader": {
        "type": "iob_reader",
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": false
            }
        }
    },
    "train_data_path": "/home/is/ujiie/drug_ner/joacor.iob",
    "validation_data_path": "/home/is/ujiie/drug_ner/joacor.iob",
    "model": {
        "type": "simple_tagger",
        "calculate_span_f1": true,
        "label_encoding": "BIO",
        "verbose_metrics": true,
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
